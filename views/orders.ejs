<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Orders</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
      background-color: #f4f4f4;
    }

    h1 {
      color: #333;
      margin-bottom: 30px;
    }

    .order {
      border: 1px solid #ccc;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 20px;
      background-color: #fff;
      box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    .order p {
      margin: 5px 0;
    }

    .product-list {
      margin-top: 15px;
      padding-left: 0;
      list-style: none;
    }

    .product-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid #ddd;
      padding: 10px 0;
    }

    .product-details {
      flex-grow: 1;
    }

    .product-image {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 8px;
      margin-left: 20px;
      border: 1px solid #ccc;
    }

    .no-orders {
      color: #777;
    }
  </style>
</head>
<body>
  <h1>All Orders</h1>

  <% if (orders.length === 0) { %>
    <p class="no-orders">No orders found.</p>
  <% } else { %>
    <% orders.forEach(order => { %>
      <div class="order">
        <p><strong>User:</strong> <%= order.userId ? order.userId.email : 'Unknown User' %></p>
        <p><strong>Date:</strong> <%= new Date(order.purchaseDate).toLocaleString() %></p>
        <!-- <p><strong>Payment Method:</strong> <%= order.paymentMethod === 'online' ? 'Online Payment' : 'Cash on Delivery' %></p> -->

        <h4>Products:</h4>
        <ul class="product-list">
          <% order.products.forEach(p => { %>
            <li class="product-item">
              <div class="product-details">
                <strong><%= p.productId ? p.productId.name : 'Unknown Product' %></strong> - Quantity: <%= p.quantity %>
              </div>
              
            </li>
          <% }) %>
        </ul>
      </div>
    <% }) %>
  <% } %>
</body>
</html>