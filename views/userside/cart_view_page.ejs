<% layout("../layout/boilerplate.ejs") %>

<div class="container mt-5">
    <h2 class="mb-4 fw-bold text-primary">Your Shopping Cart</h2>

    <div class="row">
        <div class="col-md-8">
            <% if (cart.length > 0) { %>
                <% cart.forEach(item => { %>
                    <% if (item.product) { %>
                        <div class="card mb-3 cart-item shadow-sm border-0 rounded">
                            <div class="row g-0">
                                <div class="col-md-3">
                                    <img src="<%= item.product.imageUrl %>" class="card-img p-2" alt="<%= item.product.name %>">
                                </div>
                                <div class="col-md-9">
                                    <div class="card-body">
                                        <h5 class="card-title fw-bold text-dark"><%= item.product.name %></h5>
                                        <p class="card-text text-muted"><%= item.product.description.substring(0, 100) %>...</p>
                                        <p class="card-text text-danger fw-semibold">‚Çπ<%= item.product.price.toFixed(2) %></p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <form method="post" action="/products/<%= item.product._id %>/cart/<%= item._id %>?_method=PUT" class="update-form">
                                                    <div class="input-group quantity-controls">
                                                        <button class="btn btn-outline-secondary decrease-btn" type="button" data-id="<%= item._id %>">-</button>
                                                        <input type="number" name="quantity" value="<%= item.quantity %>" min="1" class="form-control text-center quantity-input" data-id="<%= item._id %>">
                                                        <button class="btn btn-outline-secondary increase-btn" type="button" data-id="<%= item._id %>">+</button>
                                                    </div>
                                                </form>
                                            </div>
                                            <p class="total-price fw-bold text-success" data-id="<%= item._id %>">Total: ‚Çπ<%= (item.product.price * item.quantity).toFixed(2) %></p>
                                            <div>
                                                <form method="post" action="/products/<%= item.product._id %>/cart/<%= item._id %>?_method=DELETE">
                                                    <button class="btn btn-outline-danger btn-sm">‚ùå Remove</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } else { %>
                        <p class="text-danger"></p>
                    <% } %>
                <% }); %>
            <% } else { %>
                <p class="text-muted">Your cart is empty.</p>
            <% } %>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg border-0 p-3">
                <div class="card-body">
                    <h4 class="card-title fw-bold text-dark">Cart Totals</h4>
                    <p class="card-text">Subtotal: <strong>‚Çπ<%= cart.reduce((total, item) => total + (item.product?.price || 0) * item.quantity, 0).toFixed(2) %></strong></p>
                    <form action="/address/show" method="GET"> 
                        <button class="btn btn-warning w-100 fw-bold shadow-sm" type="submit">üõí PROCEED TO CHECKOUT</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .cart-item {
        background-color: #f8f9fa;
        border-radius: 12px;
        transition: transform 0.2s ease-in-out;
    }

    .cart-item:hover {
        transform: scale(1.02);
    }

    .cart-item .card-img {
        max-height: 150px;
        object-fit: contain;
    }

    .cart-item .card-body {
        padding: 1rem;
    }

    .quantity-controls {
        max-width: 150px;
    }

    .btn-warning:hover {
        background-color: #e6a800;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const decreaseButtons = document.querySelectorAll('.decrease-btn');
        const increaseButtons = document.querySelectorAll('.increase-btn');
        const quantityInputs = document.querySelectorAll('.quantity-input');

        function updateQuantity(itemId, change) {
            const input = document.querySelector(`.quantity-input[data-id="${itemId}"]`);
            const quantity = parseInt(input.value);
            const newQuantity = Math.max(1, quantity + change);
            input.value = newQuantity;

            const price = parseFloat(input.closest('.card-body').querySelector('.card-text.text-danger').textContent.replace('‚Çπ', ''));
            const totalPriceElement = document.querySelector(`.total-price[data-id="${itemId}"]`);
            totalPriceElement.textContent = `Total: ‚Çπ${(price * newQuantity).toFixed(2)}`;
            input.closest('.update-form').submit();
        }

        decreaseButtons.forEach(button => {
            button.addEventListener('click', () => {
                const itemId = button.dataset.id;
                updateQuantity(itemId, -1);
            });
        });

        increaseButtons.forEach(button => {
            button.addEventListener('click', () => {
                const itemId = button.dataset.id;
                updateQuantity(itemId, 1);
            });
        });

        quantityInputs.forEach(input => {
            input.addEventListener('change', () => {
                const itemId = input.dataset.id;
                const price = parseFloat(input.closest('.card-body').querySelector('.card-text.text-danger').textContent.replace('‚Çπ', ''));
                const newQuantity = parseInt(input.value);
                const totalPriceElement = document.querySelector(`.total-price[data-id="${itemId}"]`);
                totalPriceElement.textContent = `Total: ‚Çπ${(price * newQuantity).toFixed(2)}`;
                input.closest('.update-form').submit();
            });
        });
    });
</script>
