<% layout("../layout/boilerplate.ejs") %>

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh; margin-top: 20px;">
    <div class="card p-4 shadow-lg" style="width: 350px; border-radius: 10px;">
        <h2 class="text-center">Sign Up</h2>
        <form action="/signup/signup_form" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" class="form-control" required/>
                <div class="invalid-feedback">Please enter Username</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" id="email" type="email" class="form-control" required/>
                <div class="invalid-feedback">Please enter Email</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" class="form-control" required/>
                <div class="invalid-feedback">Please enter Password</div>
            </div>

            <button class="btn btn-custom w-100">Sign Up</button>
        </form>
    </div>
</div>

<style>
    .btn-custom {
        background-color: #00203F;
        color: white;
        border: none;
        padding: 10px;
        font-size: 16px;
        border-radius: 5px;
    }

    .btn-custom:hover {
        background-color: #00172D;
        color: white;
    }

    .card {
        background: white;
        border-radius: 10px;
    }
</style>
