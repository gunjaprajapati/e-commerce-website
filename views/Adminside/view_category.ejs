

<div class="categories-container">
  <h2 class="page-title">Categories</h2>

  <a href="/category/new" class="btn-add">âž• Create New Category</a>

  <table class="styled-table">
      <thead>
          <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Actions</th>
          </tr>
      </thead>
      <tbody>
          <% categories.forEach(category => { %>
              <tr>
                  <td><%= category.name %></td>
                  <td><%= category.description || 'N/A' %></td>
                  <td>
                      <a href="/category/<%= category._id %>/edit" class="btn-edit">
                          <i class="fas fa-edit"></i> Edit
                      </a>
                      <form action="/category/<%= category._id %>?_method=DELETE" method="POST" class="inline-form">
                          <button class="btn-delete">
                              <i class="fas fa-trash-alt"></i> Delete
                          </button>
                      </form>
                  </td>
              </tr>
          <% }); %>
      </tbody>
  </table>
</div>

<style>
  /* Container */
  .categories-container {
      width: 100%;
      max-width: 1000px;
      margin: 40px auto;
      padding: 20px;
      background: var(--bg-color);
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  /* Page title */
  .page-title {
      text-align: center;
      font-size: 24px;
      margin-bottom: 20px;
      color: var(--text-color);
  }

  /* Add button */
  .btn-add {
      display: block;
      text-align: center;
      background: #28a745;
      color: white;
      padding: 10px 15px;
      margin-bottom: 20px;
      text-decoration: none;
      font-size: 16px;
      border-radius: 5px;
      transition: 0.3s ease;
  }

  .btn-add:hover {
      background: #218838;
  }

  /* Styled Table */
  .styled-table {
      width: 100%;
      border-collapse: collapse;
      background: white;
      overflow: hidden;
      border-radius: 8px;
  }

  .styled-table th, .styled-table td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #ddd;
  }

  .styled-table th {
      background: #007bff;
      color: white;
  }

  .styled-table tr:hover {
      background: #f1f1f1;
  }

  /* Buttons */
  .btn-edit, .btn-delete {
      display: inline-block;
      padding: 8px 12px;
      border-radius: 5px;
      text-decoration: none;
      font-size: 14px;
      transition: 0.3s ease;
  }

  .btn-edit {
      background: #ffc107;
      color: black;
  }

  .btn-edit:hover {
      background: #e0a800;
  }

  .btn-delete {
      background: #dc3545;
      color: white;
      border: none;
      cursor: pointer;
  }

  .btn-delete:hover {
      background: #c82333;
  }

  .inline-form {
      display: inline;
  }

  /* Dark Mode */
  :root {
      --bg-color: #f8f9fa;
      --text-color: #212529;
  }

  .dark-mode {
      --bg-color: #121212;
      --text-color: #ffffff;
  }
</style>
